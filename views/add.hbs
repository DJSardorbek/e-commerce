<h4>Add New Notebooks</h4>
<form action="/add" method="POST" class="z-depth-4 f_control">
      <div class="input-field">
            <input id="title" type="text" class="validate" name="title" required>
            <label for="title">Notebooks model</label>
            <span class="helper-text" data-error="Enter Notebooks Name"></span>
      </div>
      <div class="input-field">
            <input id="price" type="number" class="validate" name="price" required min="1">
            <label for="price">Price</label>
            <span class="helper-text" data-error="Enter Price"></span>
      </div>
      <div class="input-field">
            <input id="img" type="text" class="validate" name="img" required>
            <label for="img">URL Image</label>
            <span class="helper-text" data-error="Enter URL Image"></span>
      </div>
      <div class="input-field">
          <textarea id="descr" class="materialize-textarea" name="descr" required></textarea>
          <label for="descr">Desctiption</label>
      </div>
      <button class="btn btn-primary">Add Notebooks</button>
</form>