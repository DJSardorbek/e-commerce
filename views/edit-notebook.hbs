<h4>Edit {{notebook.title}}</h4>
<form action="/notebooks/edit" method="POST" class="z-depth-4 f_control">
      <div class="input-field">
            <input 
                id="title" 
                type="text" 
                class="validate" 
                name="title"
                value="{{notebook.title}}" 
                required>
            <label for="title">Notebooks model</label>
            <span class="helper-text" data-error="Enter Notebooks Name"></span>
      </div>
      <div class="input-field">
            <input 
                id="price" 
                type="number" 
                class="validate" 
                name="price"
                value="{{notebook.price}}" 
                required min="1">
            <label for="price">Price</label>
            <span class="helper-text" data-error="Enter Price"></span>
      </div>
      <div class="input-field">
            <input 
                id="img" 
                type="text" 
                class="validate" 
                name="img"
                value="{{notebook.img}}" 
                required>
            <label for="img">URL Image</label>
            <span class="helper-text" data-error="Enter URL Image"></span>
      </div>
      <div class="input-field">
          <input 
                id="descr" 
                type="text" 
                class="validate" 
                name="descr"
                value="{{notebook.descr}}" 
                required>
            <label for="img">Description</label>
            <span class="helper-text" data-error="Enter Description"></span>
      </div>
      <input type="hidden" name="id" value="{{notebook.id}}">
      <button class="btn btn-primary">Edit Notebook</button>
</form>